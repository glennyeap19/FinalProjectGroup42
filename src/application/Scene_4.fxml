         <children>
            <Label prefHeight="17.0" prefWidth="475.0" text="This approach is based on diet, if you'd like to move towards an exercise based approach" />
            <Label prefHeight="17.0" prefWidth="475.0" text="then please click &quot;Next&quot;" />
         </children>
      </VBox>
      <Button layoutX="212.0" layoutY="419.0" mnemonicParsing="false" text="Next" />
      <VBox layoutX="14.0" layoutY="287.0" prefHeight="47.0" prefWidth="208.0">
         <children>
            <HBox prefHeight="17.0" prefWidth="200.0">
               <children>
                  <Label fx:id="weightLossDaily" />
                  <Label text="kg daily">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <HBox prefHeight="17.0" prefWidth="200.0">
               <children>
                  <Label fx:id="weightLossWeekly" />
                  <Label text="kg weekly">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
         </children>
      </VBox>
      <Pane layoutX="14.0" layoutY="169.0" prefHeight="47.0" prefWidth="500.0">
         <children>
            <Text layoutY="16.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Your target weight and date require you to intake the following amount of calories daily:" wrappingWidth="500.0">
               <font>
                  <Font size="15.0" />
               </font>
            </Text>
            <Label fx:id="targetCalories" layoutX="95.0" layoutY="19.0" text="&lt;&gt;" textFill="#0dab38">
               <font>
                  <Font size="17.0" />
               </font>
            </Label>
         </children>
      </Pane>
   </children>
