<AnchorPane prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.HealthTrackerController">
   <children>
      <VBox layoutX="14.0" layoutY="71.0" prefHeight="47.0" prefWidth="208.0">
         <children>
            <HBox prefHeight="17.0" prefWidth="200.0">
